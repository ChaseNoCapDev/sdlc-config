{
  "name": "@chasenocap/sdlc-config",
  "version": "1.0.0",
  "description": "SDLC configuration management for metaGOTHIC framework",
  "keywords": [
    "sdlc",
    "configuration",
    "phases",
    "metaGOTHIC",
    "yaml",
    "workflow"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist coverage",
    "prepublishOnly": "npm run clean && npm run build && npm run test && npm run lint"
  },
  "dependencies": {
    "@chasenocap/di-framework": "^1.0.0",
    "@chasenocap/logger": "^1.0.0",
    "ajv": "^8.12.0",
